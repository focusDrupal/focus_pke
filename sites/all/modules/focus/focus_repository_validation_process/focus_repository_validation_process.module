      }

      if (count($evaluatorsMediaFinal) < $evaluatorsDivision) {

        $rand_keys = array_rand($evaluatorsMedia, $evaluatorsDivision);

        $evaluatorsRand = array();

        if ($declInvitation == 0) {
          for ($r = 0; $r < count($rand_keys); $r++) {
